@model Scrumapp.WebMvcUI.Models.ProjectViewModels.ProjectDetailViewModel
@{
    ViewData["Title"] = "Project Profile";
}
@section Styles {

}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <section>
                <h4>Edit your project details</h4>
                <hr />
                @Html.Partial("_StatusMessage", Model.StatusMessage)
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning">Update Project Details</button>
                </form>
            </section>
        </div>
        <div class="col-md-6">
            <section>
                <h4>Manage project users</h4>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.ProjectUsers)
                        {
                            <tr>
                                <td>
                                    <img src="@user.ImageUrl" alt="User Image" class="img-circle user-image" />
                                </td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.UserRoleName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <form asp-controller="Project" asp-action="AddUser" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input id="ProjectId" name="ProjectId" value="@Model.Id" type="hidden" />
                    <div class="row">
                        <div class="col">
                            <select id="userId" name="userId" class="form-control">
                                <option>Select User</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <select id="roleId" name="roleId" class="form-control">
                                <option>Select Role</option>
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Id">@role.RoleName</option>
                                }
                            </select>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-block">Add</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
